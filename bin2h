#!/usr/bin/env python3
from json import dumps
from sys import argv

f = argv[1]
n = f.replace('.', '_').replace('-', '_')

b = list(open(f, 'rb').read())

open('%s.h' % f, 'w').write('const static char %s[]=' % n + dumps(b)
                            .replace('[', '{').replace(']', '}').replace(' ', '') + ';' +
                            'const static unsigned %s_length=%d;\n' % (n, len(b)))
